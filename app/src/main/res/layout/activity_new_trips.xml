<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.rishabh.travellingexpensemanager.NewTrips"
    android:background="@drawable/bg">

    <EditText
        android:layout_width="200dp"
        android:layout_height="50sp"
        android:id="@+id/editText1"
        android:hint="Title Of journey"
        android:background="@drawable/cornerss"
        android:paddingLeft="8dp"
        android:textColor="#000000"
        android:singleLine="true"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/button"
        android:layout_alignEnd="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <AutoCompleteTextView
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/editText2"
        android:hint="Enter Source"
        android:layout_below="@+id/editText1"
        android:layout_marginTop="18dp"
        android:background="@drawable/cornerss"
        android:paddingLeft="8dp"
        android:textColor="#000000"
        android:singleLine="true"
        android:layout_alignRight="@+id/editText1"
        android:layout_alignEnd="@+id/editText1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <AutoCompleteTextView
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/editText3"
        android:layout_below="@+id/editText2"
        android:layout_alignRight="@+id/editText2"
        android:layout_alignEnd="@+id/editText2"
        android:hint="Enter Destination"
        android:layout_marginTop="18dp"
        android:background="@drawable/cornerss"
        android:paddingLeft="8dp"
        android:textColor="#000000"
        android:singleLine="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Trip"
        android:id="@+id/button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/custombg"
        android:textColor="#000000"
        android:onClick="addTrip"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/editText4"
        android:layout_below="@+id/editText3"
        android:layout_alignRight="@+id/editText3"
        android:layout_alignEnd="@+id/editText3"
        android:hint="Date of Start"
        android:layout_marginTop="18dp"
        android:background="@drawable/cornerss"
        android:paddingLeft="8dp"
        android:textColor="#000000"
        android:singleLine="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/editText5"
        android:layout_below="@+id/editText4"
        android:layout_marginTop="18dp"
        android:hint="Date of End"
        android:background="@drawable/cornerss"
        android:paddingLeft="8dp"
        android:textColor="#000000"
        android:singleLine="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/editText4"
        android:layout_alignEnd="@+id/editText4"/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/editText6"
        android:layout_above="@+id/button"
        android:layout_alignRight="@+id/editText5"
        android:layout_alignEnd="@+id/editText5"
        android:background="@drawable/cornerss"
        android:hint=" Approved Budget"
        android:paddingLeft="8dp"
        android:textColor="#000000"
        android:layout_marginBottom="8dp"
        android:singleLine="true"
        android:numeric="decimal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>
</RelativeLayout>
