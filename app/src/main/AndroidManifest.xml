            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity android:name=".Update" />
        <activity android:name=".TripsList1" />
        <activity android:name=".TripsList2" />
        <activity android:name=".TripsList3" />
        <activity android:name=".DayWiseExpense"
            android:label="Day Wise Expense"/>
        <activity
            android:name=".TripWiseExpense"
            android:label="Trip Wise Expenses"></activity>
        <activity android:name=".CategoryWiseExpense"
            android:label="Category Wise Expenses"></activity>
